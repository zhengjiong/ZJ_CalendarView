            style="@style/CalendarCell"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

        <com.zj.example.calendar.view.CalendarCellView
            style="@style/CalendarCell"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
    </com.zj.example.calendar.view.CalendarRowView>

    <com.zj.example.calendar.view.CalendarPickerView
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>